<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hackbeanpot.com.gamepackcast">

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />
    <application android:name="MyApplication"  android:allowBackup="true" android:label="@string/app_name"
        android:icon="@drawable/ic_launcher" android:theme="@style/Theme.AppCompat">
        <activity
            android:name="MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="EnterName"
            android:label="GamePackCast" />
        <activity
            android:name="NumPlayers"
            android:label="GamePackCast" />
        <activity
            android:name="Waiting"
            android:label="GamePackCast" />
        <activity
            android:name="StartGame"
            android:label="GamePackCast" />
    </application>

</manifest>
